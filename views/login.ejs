<%- include('head.ejs') %>
<body>
    <!-- login page start-->
    <div class="container-fluid p-0">
      <div class="row m-0">
        <div class="col-12 p-0">    
          <div class="login-card login-dark">
            <div>
              <div><a class="logo" href="users"><img class="img-fluid for-light" src="assets/images/logo/logo.png" alt="looginpage"><img class="img-fluid for-dark" src="assets/images/logo/logo_dark.png" alt="looginpage"></a></div>
              <div class="login-main"> 
                <form class="theme-form" action="/login" method="post">
                  <h4>Sign in to account</h4>
                  <p>Enter your email & password to login</p>
                  <div class="form-group">
                    <label class="col-form-label">Email Address</label>
                    <input class="form-control" type="email" id="email" name="email" required="">
                  </div>
                  <div class="form-group">
                    <label class="col-form-label">Password</label>
                    <div class="form-input position-relative">
                      <input class="form-control" type="password" id="password" name="password" required="" placeholder="*********">
                      <div class="show-hide">
                        <span class="show" onclick="togglePasswordVisibility()"></span>
                      </div>
                    </div>
                  </div>
                  <div class="form-group mb-0">
                    
                    <div class="text-end mt-3">
                      <a href="users">
                        <button class="btn btn-primary btn-block w-100" type="submit">Sign in</button>
                      </a>
                    </div>
                  </div>
                  
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
      <script>
        function togglePasswordVisibility() {
          var passwordInput = document.getElementById("password");
          var showHideIcon = document.querySelector(".show-hide span");
      
          if (passwordInput.type === "password") {
            passwordInput.type = "text";
            showHideIcon.classList.remove("show");
            showHideIcon.classList.add("hide");
          } else {
            passwordInput.type = "password";
            showHideIcon.classList.remove("hide");
            showHideIcon.classList.add("show");
          }
        }
      </script>
      <!-- latest jquery-->
      <script src="assets/js/jquery.min.js"></script>
      <!-- Bootstrap js-->
      <script src="assets/js/bootstrap/bootstrap.bundle.min.js"></script>
      <!-- feather icon js-->
      <script src="assets/js/icons/feather-icon/feather.min.js"></script>
      <script src="assets/js/icons/feather-icon/feather-icon.js"></script>
      <!-- scrollbar js-->
      <!-- Sidebar jquery-->
      <script src="assets/js/config.js"></script>
      <!-- Plugins JS start-->
      <!-- Plugins JS Ends-->
      <!-- Theme js-->
      <script src="assets/js/script.js"></script>
      <!-- Plugin used-->
    </div>
  </body>
</html>